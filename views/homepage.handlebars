<!-- Loop over each object in the upcomings array -->
{{#each upcomings as |upcoming| }}
<a href="/upcoming/{{upcoming.id}}">
<div class="row mb-4 upcoming">
  <div class="col-md-5">
    <h2>{{upcoming.title}}  🍿{{upcoming.popularity}}</h2>
    <h3>{{upcoming.genre_id | upcoming.language}}</h3>
    <img src= '{{upcoming.poster_path}}' >
    <p>In Theatres On the {{upcoming.release_date}}</p>
    <p>{{upcoming.overview}}</p>
    <p></p>
  </div>
  </a>

</div>
{{/each}}